#!/bin/bash

set -e

pushd "$(dirname $0)" > /dev/null

docker pull debian:9

docker build -t dr.chefkoch.net/chefkoch-design-system/base ../components/base
docker build -t dr.chefkoch.net/chefkoch-design-system/build ../components/app -f ../components/app/Dockerfile.build
./build
docker build -t dr.chefkoch.net/chefkoch-design-system/app ../components/app
